<?xml version="1.0"?>
<ruleset name="http-policy">
  <description>Coding standard for webtheory/http-policy</description>

  <!-- File paths -->
  <file>./src</file>

  <!-- Args -->
  <arg value="p"/>
  <arg value="s"/>
  <arg name="colors"/>

  <!-- Config -->
  <config name="ignore_warnings_on_exit"
    value="1"/>

  <config name="ignore_errors_on_exit"
    value="1"/>

  <config name="default_standard"
    value="PSR12"/>

  <!-- Use the PSR-12 Standard-->
  <rule ref="PSR12"/>

  <!-- Disable Default Squiz Checks -->
  <rule ref="Squiz">
    <exclude name="Squiz"/>
  </rule>

</ruleset>
